<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hu.icss.sqlightexperiment.SqlightActivity" >

    <EditText
        android:id="@+id/student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Student Name"
        android:inputType="textPersonName" >
        <requestFocus />
    </EditText>
    <Button
        android:id="@+id/delete_engineers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/student_name"
        android:layout_alignTop="@+id/student_name"
        android:layout_marginTop="25dp"
        android:text="Delete All Engineering Students" />
        
    <Button
        android:id="@+id/add_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/student_name"
        android:text="Add" />

    <Spinner
        android:id="@+id/faculties_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/delete_engineers"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />
        
    <ListView
        android:id="@+id/student_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/faculties_spinner" >

    </ListView>

    

</RelativeLayout>
